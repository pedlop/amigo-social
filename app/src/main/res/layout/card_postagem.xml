<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/postagem_imagem"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:contentDescription=""
                android:scaleType="centerCrop"
                android:src="@mipmap/spider"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/postagem_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postagem_imagem"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/title"
                android:textColor="#222"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postagem_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postagem_titulo"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/description"
                android:textColor="#666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/postagem_legenda"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_above="@+id/postagem_titulo"
                android:layout_margin="20dp"
                android:layout_marginBottom="22dp"
                android:layout_marginLeft="20dp"
                android:text="@string/subtitle"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/postagem_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/postagem_titulo"
                android:layout_alignLeft="@+id/postagem_legenda"
                android:layout_alignStart="@+id/postagem_legenda"
                android:text="@string/data"
                android:textColor="@android:color/white" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>