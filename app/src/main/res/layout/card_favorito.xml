<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/img_card_fav"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="245dp"
                app:srcCompat="@mipmap/spider" />

            <RelativeLayout
                android:layout_height="75dp"
                android:layout_width="240dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/text_resumo_card_fav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="25dp"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/text_titulo_card_fav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/text_resumo_card_fav"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/text_resumo_card_fav"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>