<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="br.ufg.inf.amigosocial.ConfiguracoesActivity">

    <CheckBox
        android:id="@+id/check_box_notificacoes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_hab_notificacoes" />

    <CheckBox
        android:id="@+id/check_box_noticias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_hab_noticias" />

</LinearLayout>
